<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
<PongPaddle>:
    size : 25, 200
    canvas :
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball : pong_ball
    player1: left_player
    player2: right_player
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label :
        center_x : root.width/4
        top : root.top - 30
        text : str(root.player2.score)
        font_size : 60

    Label :
        center_x : root.width * 3/4
        top : root.top - 30
        text : str(root.player1.score)
        font_size : 60

    PongBall:
        id : pong_ball
        center: self.parent.center

    PongPaddle:
        id: left_player
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: right_player
        x: root.width - self.width
        center_y: root.center_y


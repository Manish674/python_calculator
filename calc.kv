<Custbutton@Button>:
    font_size : 30

<CalcDesign>:
    id : calculator
    display : entry

    rows : 5
    spacing : 10
    padding : 10

    BoxLayout :
        TextInput :
            id : entry
            font_size : 40
            multiline : False

    BoxLayout :
        spacing : 20
        Custbutton :
            text : "7"
            on_press : entry.text += self.text
        Custbutton :
            text : "8"
            on_press : entry.text += self.text
        Custbutton :
            text : "9"
            on_press : entry.text += self.text
        Custbutton :
            text : "+"
            on_press : entry.text += self.text



    BoxLayout :
        spacing : 20
        Custbutton :
            text : "4"
            on_press : entry.text += self.text
        Custbutton :
            text : "5"
            on_press : entry.text += self.text
        Custbutton :
            text : "6"
            on_press : entry.text += self.text
        Custbutton :
            text : "-"
            on_press : entry.text += self.text


    BoxLayout :
        spacing : 20
        Custbutton :
            text : "1"
            on_press : entry.text += self.text
        Custbutton :
            text : "2"
            on_press : entry.text += self.text
        Custbutton :
            text : "3"
            on_press : entry.text += self.text
        Custbutton :
            text : "AC"
            on_press : entry.text = ""


    BoxLayout :
        spacing : 20
        Custbutton :
            text : "/"
            on_press : entry.text += self.text
        Custbutton :
            text : "0"
            on_press : entry.text += self.text
        Custbutton :
            text : "*"
            on_press : entry.text += self.text
        Custbutton :
            text : "="
            on_press : calculator.calculate(entry.text)